<%= form_for @driver do |f| %>
	<% if @driver.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@driver.errors.count, "error") %>
				prohibited this driver from being saved:
			</h2>
			
			<ul>
			<% @driver.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>