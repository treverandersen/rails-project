<h1>Storage</h1>

<%= link_to "New bin", new_bin_path %>

<table>
	<tr>
		<th>Bin Name</th>
		<th>Bushel Capacity</th>
	</tr>
	<% @bins.each do |bin| %>
		<tr>
			<td><%= bin.name %></td>
			<td><%= bin.bushel_capacity %>
			<td><%= link_to 'Show', bin_path(bin) %></td>
			<td><%= link_to 'Edit', edit_bin_path(bin) %></td>
			<td><%= link_to 'Destroy', bin_path(bin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
